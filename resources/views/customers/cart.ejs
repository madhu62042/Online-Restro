<section class="cart py-16">
           <% if(session.cart){ %>
         <div class="order container mx-auto xl:w-1/2 px-10">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img class="min-w-14 h-14" src="/img/download.jpeg" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>

            <div class="item-list ">
                <% for(let pizza of Object.values(session.cart.items)) { %>
                <div class="flex items-center my-8">
                    
                    <img class="w-24 h-24 rounded-full" src="/img/<%= pizza.item.image %>" alt="">
                    <div class="flex-1 ml-3">
                        <h1><%= pizza.item.name %></h1>
                        <span><%= pizza.item.size %></span>
                    </div>
                       <span class="flex-1"><%= pizza.qty %> Pcs</span>
                       <span class="font-bold text-lg">Rs.<%= pizza.item.price * pizza.qty%></span>
                </div>
                  <% } %>
            </div>
           
              
             <hr>
             
             <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount ml-2 text-2xl font-bold"> <%= session.cart.totalPrice %></span>
                </div>

                <% if(user){ %>

                <div>
                    <form action="/orders" method="POST" class="mt-10">
                        <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number ">

                        <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address ">

                       <div>
                            <button type="submit" class="btn-primary font-bold text-white mt-6 rounded-full px-6 py-2">Order Now</button>
                        </div> 
                    </form>  
                </div>
                <% } else { %>
                <a href="/login" class="inline-block cursor-pointer btn-primary font-bold text-white mt-6 rounded-full px-6 py-2">Login to continue</a>
                <% } %>
             </div>
        </div>

           
       <% } else { %>

    <div class="empty-cart py-10">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty </h1>
            <p class="text-gray-500 text-lg mb-12">you probably haven't ordered any item yet. <br>
               To orderd a item, go to the main page.</p>
    
               <img class="w-2/5 mx-auto" src="/img/shoppingg-cart.webp" alt="">
               <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white text-bold mt-12">Go Back</a>
            
    
        </div>
    
    </div>
    
    <% } %>

</section>